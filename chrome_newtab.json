{
  "title": "Complex Modifications",
  "rules": [
    {
      "description": "Ctrl-w で chrome のタブを閉じる",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "command"
              ]
            }
          ],
	  "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome",
                "^com\\.apple\\.Safari"
              ]
            }
          ]
        }
      ]
    }
  ]
}
