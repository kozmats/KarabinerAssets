{
  "title": "Complex Modifications",
  "rules": [
    {
      "description": "Ctrl-j to kana (only iTerm2)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_kana"
            }
          ],
	  "conditions": [
	    {
	      "type": "frontmost_application_if",
	      "bundle_identifiers": [
		"^com\\.googlecode\\.iterm2"
	      ]
	    }
	  ]
        }
      ]
    }
  ]
}
