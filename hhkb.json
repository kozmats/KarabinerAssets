{
  "title": "HHKB like controls",
  "rules": [
    {
      "description": "Shift-delete to tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "right_shift"
              ]
            }
          ]
        }
      ]
    }
  ]
}
