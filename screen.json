{
  "title": "ScreenSaver",
  "rules": [
    {
      "description": "Ctrl-Shift-l で スクリーンセーバーを起動する",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "control",
                "shift"
              ]
            }
          },
          "to": [
            {
	      "shell_command": "open /System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app"
            }
          ]
        }
      ]
    },
    {
      "description": "insert で スクリーンセーバーを起動する",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "insert"
          },
          "to": [
            {
	      "shell_command": "open /System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app"
            }
          ]
        }
      ]
    }
  ]
}
