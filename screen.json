{
  "title": "Complex Modifications",
  "rules": [
    {
      "description": "Ctrl-l で スクリーンセーバーを起動する",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
	      "shell_command": "open /System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app"
            }
          ],
	  "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^org\\.gnu\\.Emacs"
              ]
            }
          ]
        }
      ]
    }
  ]
}
