{
  "title": "Vortex core modifications",
  "rules": [
    {
      "description": "Ctrl-. to slash",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "slash"
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl-Shift-. to ?",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "control",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "slash",
              "modifiers": [
                "shift"
              ]
            }
          ]
        }
      ]
    },
