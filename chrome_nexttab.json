{
  "title": "Complex Modifications",
  "rules": [
    {
      "description": "Ctrl-> で chrome に次のタブを表示する",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
	        "left_control",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "command",
		"left_option"
              ]
            }
          ],
	  "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome"
              ]
            }
          ]
        }
      ]
    }
  ]
}
